<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyCalculator" packages="">
    <Appenders>
        <File name="MyLogFile" fileName="logs/calculator.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="MyLogFile"/>
        </Root>
    </Loggers>
</Configuration>